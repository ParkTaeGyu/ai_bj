# YouTube Data API v3 key
YOUTUBE_API_KEY=YOUR_API_KEY

# Live chat ID for your current live broadcast
LIVE_CHAT_ID=YOUR_LIVE_CHAT_ID

# Bot display name used for mention detection
BOT_NAME=AI

# Optional: enable local LLM via Ollama (free, local)
# OLLAMA_MODEL=llama3.1:8b
# Tone preset for responses (requires OLLAMA_MODEL)
# TONE_PRESET=balanced  # calm | balanced | energetic

# Where OBS reads the text overlay from
OVERLAY_PATH=./overlay.txt

# Only respond when bot name is mentioned (1=yes, 0=no)
ONLY_WHEN_MENTIONED=1

# Minimum seconds between responses
RESPONSE_COOLDOWN_SEC=10

# TTS (macOS built-in `say`)
TTS_ENABLED=1
# TTS_VOICE=Yuna
# TTS_RATE=180

# Chat filters / cooldown tuning
MIN_MESSAGE_LEN=2
MAX_MESSAGE_LEN=200
IGNORED_PREFIXES=!,/
IGNORED_WORDS=
PER_USER_COOLDOWN_SEC=20
# 1.0 = respond to all, 0.5 = respond to about half
RESPONSE_RANDOM_RATIO=1.0
# Replace URLs with a placeholder to reduce noisy TTS
STRIP_URLS=1
